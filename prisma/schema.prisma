generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  name           String?
  image          String?
  plan           Plan           @default(FREE)
  isSubscribed   Boolean        @default(false)
  usageCount     Int            @default(0)       // Số lần chat / token sử dụng
  lastSeenAt     DateTime?                       // ✅ Lần cuối người dùng truy cập web
  lastChatAt     DateTime?                       // ✅ Lần cuối người dùng gửi tin nhắn
  createdAt      DateTime       @default(now())
  sessions       ChatSession[]                  // Các phiên chat
  messages       Message[]                      // Toàn bộ tin nhắn
  feedbacks      Feedback[]                     // Phản hồi của người dùng
}

model ChatSession {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  messages  Message[]
  title     String?                       // Tiêu đề của phiên chat (tuỳ chọn)
  createdAt DateTime     @default(now())
}

model Message {
  id          String       @id @default(cuid())
  session     ChatSession  @relation(fields: [sessionId], references: [id])
  sessionId   String
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  role        Role
  content     String
  fileUrl     String?                        // Nếu có file đính kèm
  createdAt   DateTime     @default(now())
}

model Feedback {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  message   String
  rating    Int?                            // Ví dụ: 1–5 sao
  createdAt DateTime   @default(now())
}

enum Role {
  user
  assistant
  system
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}
