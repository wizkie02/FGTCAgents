generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  name           String?
  image          String?
  plan           Plan           @default(FREE)
  isSubscribed   Boolean        @default(false)
  usageCount     Int            @default(0)
  lastSeenAt     DateTime?                       // â± Láº§n cuá»‘i user vÃ o há»‡ thá»‘ng
  lastChatAt     DateTime?                       // â± Láº§n cuá»‘i user gá»­i tin nháº¯n
  createdAt      DateTime       @default(now())
  sessions       ChatSession[]                  // ğŸ’¬ CÃ¡c session chat cá»§a user
  messages       Message[]                      // ğŸ’¬ CÃ¡c message cá»§a user
  feedbacks      Feedback[]                     // ğŸ“ Feedback tá»« user
}

model ChatSession {
  id          String     @id @default(cuid())
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  messages    Message[]
  title       String?
  summary     Json?       // ğŸ§  TÃ³m táº¯t cÃ¡c lÆ°á»£t há»™i thoáº¡i { user: "...", chatbot: "..." }
  answer      String?     // ğŸ§  CÃ¢u tráº£ lá»i gáº§n nháº¥t
  createdAt   DateTime   @default(now())
}

model Message {
  id          String     @id @default(cuid())
  session     ChatSession  @relation(fields: [sessionId], references: [id])
  sessionId   String
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  role        Role
  content     String                      // âœï¸ Ná»™i dung tin nháº¯n ngÆ°á»i dÃ¹ng
  answer      String?                     // ğŸ¤– Tráº£ lá»i cá»§a chatbot (tá»± Ä‘á»™ng thÃªm vÃ o sau)
  createdAt   DateTime   @default(now())
  fileUrl     String?
}

model Feedback {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  message   String
  rating    Int?                             // â­ Sá»‘ sao Ä‘Ã¡nh giÃ¡ (1-5)
  createdAt DateTime   @default(now())
}

enum Role {
  user
  assistant
  system
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}
